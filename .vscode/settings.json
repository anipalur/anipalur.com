{
  "editor.detectIndentation": false,
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.wordWrap": "off",

  "explorer.excludeGitIgnore": true,

  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.readonlyInclude": {
    "LICENSE": true,
    "node_modules/**": true,
    "package-lock.json": true,
    "themes/**": true
  },

  "search.exclude": {
    "LICENSE": true,
    "node_modules/**": true,
    "package-lock.json": true,
    "themes/**": true
  },

  "yaml.format.proseWrap": "preserve",

  "cSpell.enableFiletypes": [
    "css",
    "git-commit",
    "git-rebase",
    "go",
    "html",
    "ignore",
    "json",
    "markdown",
    "markdown-math",
    "scss",
    "yaml",
    "yml"
  ],
  "cSpell.ignorePaths": [
    "LICENSE",
    "node_modules/**",
    "package-lock.json",
    "themes/**"
  ],
  "cSpell.language": "en-GB",
  "cSpell.showAutocompleteSuggestions": true
}
